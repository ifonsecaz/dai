<Window x:Class="Convertidor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Convertidor"
        mc:Ignorable="d"
        Title="Convertidor" Height="240" Width="300">
    <Grid>
        <Label x:Name="lblCentigrados" Content="Centígrados" HorizontalAlignment="Left" Margin="21,23,0,0" VerticalAlignment="Top" FontFamily="Harlow Solid Italic" FontSize="16"/>
        <Label x:Name="lblFahrenheit" Content="Fahrenheit" HorizontalAlignment="Left" Margin="21,88,0,0" VerticalAlignment="Top" FontFamily="Harlow Solid Italic" FontSize="16"/>
        <TextBox x:Name="txtFahrenheit" HorizontalAlignment="Left" Height="23" Margin="126,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="TxtFahrenheit_PreviewTextInput"/>
        <TextBox x:Name="txtCentígrados" HorizontalAlignment="Left" Height="23" Margin="126,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="TxtCentígrados_PreviewTextInput"/>
        <Button x:Name="bttCalcular" Content="Calcular" HorizontalAlignment="Left" Margin="171,172,0,0" VerticalAlignment="Top" Width="75" Click="BttCalcular_Click"/>


    </Grid>
</Window>
